{% extends 'base.html.twig' %}
{%  block body %}
    {% form_theme wishForm 'foundation_5_layout.html.twig' %}
    <div class="container">
        <h2>Ajouter un Wish</h2>
        <div class="form-control mt-3 p-3 mx-auto">
            {{ form_start(wishForm) }}
            {{ form_row(wishForm._token) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(wishForm) }}
            </div>
            <div class="row mb-3">
                <div class="col-1 offset-2">
                    {{ form_label(wishForm.title,'Titre : ') }}
                </div>
                <div class="col-2">{{ form_widget(wishForm.title) }}</div>
                <div class="col-1">
                    {{ form_label(wishForm.author,'Auteur : ') }}
                </div>
                <div class="col">{{ form_widget(wishForm.author) }}</div>
            </div>
            <div class="row mb-3">
                <div class="col-1  offset-2">
                    {{ form_label(wishForm.category,'Categorie :') }}
                </div>
                <div class="col-2">{{ form_widget(wishForm.category) }}</div>
            </div>
            <div class="row mb-3">
                <div class="col-5  offset-2">
                    {{ form_label(wishForm.description,'Description :') }}
                </div>
                <div class="col-5 offset-3">{{ form_widget(wishForm.description, { 'attr': {'class': 'textare'}} ) }}</div>
            </div>

            <div class="row ">
                <div class="col offset-5">
                    {{ form_row(wishForm.Publier, { 'attr': {'class': 'btn btn-primary'}} ) }}
                </div>
               </div>

            {{ form_end(wishForm, {render_rest: false})    }}
        </div>
    </div>

{% endblock %}